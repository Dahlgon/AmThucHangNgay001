<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#b085f5</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#b085f5</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="OverFlow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    
    <style name="Button" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="android:radius">5dp</item>
        <item name="android:background">#7e57c2</item>
    </style>
</resources>
